<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverviewActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOST"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.StockManager.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.StockManager.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_overview_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        app:menu_colorNormal="@color/color_2_1"
        app:menu_colorPressed="@color/color_2_2"
        app:menu_colorRipple="@android:color/transparent"
        app:menu_fab_size="normal"
        app:menu_icon="@drawable/ic_baseline_add_36"
        app:menu_fab_label="@string/add_trans"
        app:menu_labels_colorRipple="@android:color/transparent">
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_overview_add_cash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="mini"
            app:fab_colorNormal="@color/color_2_2"
            app:fab_colorPressed="@color/color_2_1"
            app:fab_colorRipple="@android:color/transparent"
            app:fab_label="@string/add_trans_cash"
            android:src="@drawable/ic_baseline_attach_money_24"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_overview_add_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="mini"
            app:fab_colorNormal="@color/color_2_2"
            app:fab_colorPressed="@color/color_2_1"
            app:fab_colorRipple="@android:color/transparent"
            app:fab_label="@string/add_trans_stock"
            android:src="@drawable/ic_baseline_candlestick_chart_24"
            />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_overview_add_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_size="mini"
            app:fab_colorNormal="@color/color_2_2"
            app:fab_colorPressed="@color/color_2_1"
            app:fab_colorRipple="@android:color/transparent"
            app:fab_label="@string/add_trans_other"
            android:src="@drawable/ic_baseline_wifi_protected_setup_24"
            />
    </com.github.clans.fab.FloatingActionMenu>

</androidx.coordinatorlayout.widget.CoordinatorLayout>